//Mixins
boxShadowHelper(level)
	if level == 1
		box-shadow: 0px 0px 3px rgba(0,0,0,0.12), 1px 1px 2px rgba(0,0,0,0.24)
	else if level == 2 
		box-shadow: 0px 0px 6px rgba(0,0,0,0.16), 3px 3px 6px rgba(0,0,0,0.23)
	else if level == 3
		box-shadow: 0px 0px 20px rgba(0,0,0,0.19), 6px 6px 6px rgba(0,0,0,0.23)
	else if level == 4
		box-shadow: 0px 0px 28px rgba(0,0,0,0.25), 10px 10px 10px rgba(0,0,0,0.22)
	else if level == 5
		box-shadow: 0px 0px 38px rgba(0,0,0,0.30), 15px 15px 12px rgba(0,0,0,0.5)


