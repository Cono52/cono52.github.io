//hide scroller / style
::-webkit-scrollbar
{
  width: 1px  /* for vertical scrollbars */
  height: 12px /* for horizontal scrollbars */
}

::-webkit-scrollbar-track
{
  background: rgba(0, 0, 0, 0.0)
}

::-webkit-scrollbar-thumb
{
  background: rgba(0, 0, 0, 0.5)
  border-radius: 5px
}


//Intro Section

.container-intro
	height: 100vh
	position: relative
	/* Permalink - use to edit and share this gradient: http://colorzilla.com/gradient-editor/#8e44ad+43,207cca+100 */
	// background: rgb(142,68,173)/* Old browsers */
	// background: -moz-linear-gradient(top,  rgba(142,68,173,0.5) 43%, rgba(32,124,202,0.5) 100%) /* FF3.6-15 */
	// background: -webkit-linear-gradient(top,  rgba(142,68,173,0.5) 43%,rgba(32,124,202,0.5) 100%)/* Chrome10-25,Safari5.1-6 */
	// background: linear-gradient(to bottom,  rgba(142,68,173,0.5) 43%,rgba(32,124,202,0.5) 100%) /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
	transition: all 0.5s ease-out
	background: #ffffff
	z-index: -2

.container-content
	position: fixed;
	width: 500px
	height: auto;
	padding-top: 12vh;
	top: 50%
	left: 50%;
	transform: translateY(-50%) translateX(-50%)
	text-align: center
	transition: all 0.5s ease-out
	z-index: -2

.fadeIn
	animation: fadeIn 3.0s cubic-bezier(0.42, 0, 0.73, 1.23) 0.0s forwards

.fadeInL
	animation: fadeIn 4.0s cubic-bezier(0.42, 0, 0.73, 1.23) 0.0s forwards


@keyframes fadeIn
	0%
		opacity: 0
	50%
		opacity: 0
	100%
		opacity: 1
		

.pop:hover 
	transform: scale(1.04)
	boxShadowHelper(2)

.pop1:hover 
	transform: scale(1.03)

.welcome
	margin-left: auto
	margin-right: auto
	font-size: 40px
	max-width: 600px
	text-align: center
	
.welcome p
	padding-top: 1rem
	margin: 0px

.hello
	animation: fadeInSlide 1.5s cubic-bezier(0.42, 0, 0.73, 1.23) 0.0s forwards
	
@keyframes fadeInSlide
	0%
		opacity: 0
		transform: translateX(198%)
	50%
		opacity: 1
		transform: translateX(198%)
	60%
		opacity: 1
		transform: translateX(198%)
	100%
		transform: translateX(0px)

